<html> 
<head> 

<style> 

table, th, td {
	border: 1px solid black;
	border-collapse: collapse;
	text-align: center;
	padding: 10px;
	color: black;
}	

</style>
</head>
<body>

<br> <br> 



UPDATE STOCKS 
<table>
<th>Item</th>
<th>Size</th>
<th>Stock</th>

<form method = "post">

<% @items_list.each do |item| 
	if item.is_active %>
<tr> 
<td><%= item.item_name %> </td>
<td><%= item.size %> </td> 
<td><input type = "integer" name = <%= "#{item.id}" %> value = <%= item.current_stock %>> </td>
</tr>

<% end end %> 
</table> 
<input type = "submit"> 
</form>
<br> <br> 



</body>
</html>

